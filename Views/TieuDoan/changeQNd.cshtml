<div class="content-wrapper"  style="min-height: 1000px;">

    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-6">
                    <!-- general form elements -->
                    <div class="card card-primary">

                        <!-- /.card -->
                        <!-- general form elements -->
                        <div class="card card-primary">
                            <div class="card-header">
                                <h3 class="card-title">Thông tin quân nhân @maQN</h3>
                            </div>
                            <!-- /.card-header -->

                            <form method="post" action="/TieuDoan/changeQNd_buton_click/@maQN">
                                <div class="card-body">
                                    <h4>Đơn vị</h4>
                                    <div class="form-group">
                                        <label for="exampleInputBorder">Họ tên quân nhân <code></code></label>
                                        <input type="text" class="form-control form-control-border" id="input_tenQN" name="input_tenQN" value="@hoten">
                                    </div>

                                    <h4>Thông tin chi tiết</h4>
                                    <div class="form-group">
                                        <label for="exampleSelectBorder">Cấp bậc <code></code></label>
                                        <input type="text" class="form-control form-control-border" id="input_capbac" name="input_capbac" value="@capbac">
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelectBorderWidth2">Chức vụ <code></code></label>
                                        <select class="form-control" id="select_chucvu" name="select_chucvu">
                                            @foreach (var item in chucvu)
                                            {
                                                if (qncv == item.MaChucVu)
                                                {

                                                    <option value=@item.MaChucVu>@item.TenChucVu</option>
                                                    chucvu.Remove(item);
                                                    break;
                                                }


                                            }

                                            @foreach (var item1 in chucvu)
                                            {
                                                <option value=@item1.MaChucVu>@item1.TenChucVu</option>

                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelectRounded0">Đơn vị <code></code></label>
                                        <select class="form-control" id="select_donvi" name="select_donvi">
                                            @foreach (var item in donvi)
                                            {
                                                if (qndv == item.MaDonVi)
                                                {

                                                    <option value=@item.MaDonVi>@item.TenDonVi</option>
                                                    donvi.Remove(item);
                                                    break;
                                                }


                                            }

                                            @foreach (var item1 in donvi)
                                            {
                                                <option value=@item1.MaDonVi>@item1.TenDonVi</option>

                                            }
                                        </select>
                                    </div>
                                    <div class="form-group">
                                        <label for="exampleSelectRounded0">Loại quân nhân <code></code></label>
                                        <select class="form-control" id="select_loaiQN" name="select_loaiQN">
                                            @foreach (var item in loaiqn)
                                            {
                                                if (qnl == item.MaLoai)
                                                {

                                                    <option value=@item.MaLoai>@item.TenLoai</option>
                                                    loaiqn.Remove(item);
                                                    break;
                                                }


                                            }

                                            @foreach (var item1 in loaiqn)
                                            {
                                                <option value=@item1.MaLoai>@item1.TenLoai</option>

                                            }
                                        </select>
                                    </div>
                                    <div class="card-footer">
                                        <button class="btn btn-primary" type="submit">Thay đổi </button>
                                        <a class="btn btn-primary" href="/TieuDoan/viewTieuDoan">Trở về</a>
                                    </div>
                                </div>

                            </form>




                        </div>
                    </div>
                </div>
