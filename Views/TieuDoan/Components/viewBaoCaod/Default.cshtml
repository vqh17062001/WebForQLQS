@{
    // trang nay cho viewBaoCao

}

@{
    var ttchucvu = ViewData["TT_ChucVU"] as List<QuannhanChucvu>;

    var ttdonvi = ViewData["TT_DonVi"] as List<QuannhanDonvi>;

    int y = 1 + (Model.CurrentPage - 1) * 10;
}
@model PagedViewModel<WebForQLQS.Models.BaoCaoQsNgay>;
<div class="content-wrapper" style="min-height: 1302.32px;">

    <section class="content">

        <div class="card-header">
            <h3 class="card-title">Tiêu đề (ngày báo cáo)</h3>

            <div class="card-tools">

                <div class="input-group input-group-sm" style="width: 400px;">
                    <div style="width: 150px">

                        <button type="button" class="btn btn-block btn-primary" asp-action="submit">BÁO CÁO</button>

                    </div>
                    <input type="text" name="table_search" class="form-control float-right" placeholder="Nhập tên quân nhân">

                    <div class="input-group-append">
                        <button type="submit" class="btn btn-default">
                            <i class="fas fa-search"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- /.card-header -->



        <div class="card-body p-0">
            <table class="table table-striped">
                <thead>
                    <tr>


                        <th style="width: 10px">STT</th>
                        <th> HỌ TÊN </th>
                        <th> CHỨC VỤ </th>
                        <th> ĐƠN VỊ </th>
                        <th style="width: 130px"> LÝ DO </th>


                        <th></th>
                        <th style="width: 40px"></th>

                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@y</td>

                            <td>@item.MaQuanNhan</td>

                            @foreach (var item2 in ttchucvu)
                            {
                                if (item.MaQuanNhan == item2.MaQuanNhan)
                                {
                                    <td>@item2.MaChucVu</td>

                                }


                            }


                            @foreach (var item2 in ttdonvi)
                            {
                                if (item.MaQuanNhan == item2.MaQuanNhan)
                                {
                                    <td>@item2.MaDonVi</td>

                                }


                            }


                            
                            <td>@item.LyDo</td>
                            <td><button type="button" class="btn btn-block btn-primary" asp-action="modify">chi tiết</button></td>
                            <td><button type="button" class="btn btn-block btn-primary" asp-action="delete" style=" background-color:red">xóa</button></td>

                        </tr>
                        y++;
                    }



                </tbody>
            </table>


            <div class="pagination">
                @for (int i = 1; i <= (Model.TotalItems / Model.PageSize) + 1; i++)
                {


                    <a class="btn-navbar  nav-link " href="@Url.Action("linkviewBaoCaod", new { page = i })">@i</a>
                }
            </div>


        </div>
        <!-- /.card-body -->


    </section>
</div>